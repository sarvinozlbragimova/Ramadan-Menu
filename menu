<body>
    <h1>Ramadan Menu</h1>
    <label for="language">Choose Language:</label>
    <select id="language" onchange="changeLanguage()">
        <option value="en">English</option>
        <option value="ru">–†—É—Å—Å–∫–∏–π</option>
        <option value="uz">O'zbek</option>
    </select>
    
    <h2 id="sahoor-title">Sahoor</h2>
    <div class="menu" id="sahoor-menu">
        <div class="meal" onclick="showRecipe('oatmeal')">ü•£ Oatmeal</div>
        <div class="meal" onclick="showRecipe('buckwheat')">üçö Buckwheat</div>
    </div>
    
    <h2 id="iftar-title">Iftar</h2>
    <div class="menu" id="iftar-menu">
        <div class="meal" onclick="showRecipe('rice-porridge')">üç≤ Rice Porridge</div>
        <div class="meal" onclick="showRecipe('pancakes')">ü•û Pancakes</div>
    </div>
    
    <div id="recipe" class="hidden"></div>
    
    <script>
        const recipes = {
            oatmeal: { en: "Oatmeal with honey and nuts.", ru: "–û–≤—Å—è–Ω–∫–∞ —Å –º—ë–¥–æ–º –∏ –æ—Ä–µ—Ö–∞–º–∏.", uz: "Asal va yong'oq bilan suli yormasi." },
            buckwheat: { en: "Buckwheat with butter.", ru: "–ì—Ä–µ—á–∫–∞ —Å –º–∞—Å–ª–æ–º.", uz: "Grechka yog' bilan." },
            "rice-porridge": { en: "Rice porridge with milk.", ru: "–†–∏—Å–æ–≤–∞—è –∫–∞—à–∞ —Å –º–æ–ª–æ–∫–æ–º.", uz: "Sutli guruch bo'tqasi." },
            pancakes: { en: "Fluffy pancakes with jam.", ru: "–ü—ã—à–Ω—ã–µ –±–ª–∏–Ω—ã —Å –≤–∞—Ä–µ–Ω—å–µ–º.", uz: "Murabbo bilan quyuq blinchiklar." }
        };

        function changeLanguage() {
            const lang = document.getElementById("language").value;
            document.getElementById("sahoor-title").innerText = lang === "en" ? "Sahoor" : lang === "ru" ? "–°—É—Ö—É—Ä" : "Saharlik";
            document.getElementById("iftar-title").innerText = lang === "en" ? "Iftar" : lang === "ru" ? "–ò—Ñ—Ç–∞—Ä" : "Iftor";
        }

        function showRecipe(meal) {
            const lang = document.getElementById("language").value;
            document.getElementById("recipe").innerText = recipes[meal][lang];
            document.getElementById("recipe").classList.remove("hidden");
        }
    </script>
